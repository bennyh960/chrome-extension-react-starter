{
  "name": "chrome-extension-react-ts",
  "author": "Bennyh960",
  "license": "MIT",
  "main": "cli.js",
  "description": "A starter package for creating Chrome extensions with react and typescript",
  "version": "0.0.3",
  "bin": {
    "create-chrome-extension-react-ts": "cli.js"
  },
  "readme": "README.md",
  "homepage": "https://github.com/bennyh960/chrome-extension-react-starter/blob/main/README.md",
  "keywords": [
    "chrome extension",
    "react",
    "typescript",
    "chrome extension boilerplate",
    "chrome extension starter kit",
    "react chrome extension",
    "typescript chrome extension",
    "chrome extension template",
    "chrome extension development",
    "chrome extension creation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennyh960/chrome-extension-react-starter.git"
  },
  "dependencies": {
    "cra-template-typescript": "1.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "dev": "react-scripts start",
    "start": "webpack --watch --progress --config webpack.dev.js",
    "build": "webpack --watch --progress --config webpack.prod.js",
    "update-npm": "git add . & git commit -m 'auto-update' & npm version patch & npm publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@types/react-dom": "^19.0.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "html-webpack-root-plugin": "^0.10.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  }
}
